<h1>Hello, Rails!</h1>
<%= link_to "My Blog", controller: 'articles' %>
<h1>List Articles </h1>
<table>
  <tr>
    <td>Title</td>
    <td>Text</td>
    <td>Action</td>
  </tr>

  <% @articles.each do |article|  %>
  <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show',articles_path(article) %></td>
  </tr  >
  <% end %>
</table>
  <%= link_to "New Article", new_article_path %>

